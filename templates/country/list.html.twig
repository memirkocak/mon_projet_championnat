{% extends 'base.html.twig' %}

{% block title %}Liste des pays{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Liste des pays</h1>
            <div>
                <a href="{{ path('app_country_create') }}" class="btn btn-primary">Créer un pays</a>
                <a href="{{ path('app_home') }}" class="btn btn-secondary">Retour à l'accueil</a>
            </div>
        </div>

        {% if countries|length > 0 %}
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Logo</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for country in countries %}
                            <tr>
                                <td>{{ country.id }}</td>
                                <td><strong>{{ country.name }}</strong></td>
                                <td>
                                    {% if country.logo %}
                                        <img src="{{ asset('uploads/logos/' ~ country.logo) }}" 
                                             alt="{{ country.name }}" 
                                             style="max-width: 50px; max-height: 50px;">
                                    {% else %}
                                        <span class="text-muted">Aucun logo</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <a href="{{ path('app_country_edit', {id: country.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert alert-info">
                <p class="mb-0">Aucun pays n'a encore été créé.</p>
            </div>
        {% endif %}
    </div>
{% endblock %}

