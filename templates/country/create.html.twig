{% extends 'base.html.twig' %}

{% block title %}Création de pays{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Création de pays</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        <div class="card mt-4">
            <div class="card-body">
                {{ form_start(countryForm, {'attr': {'enctype': 'multipart/form-data'}}) }}
                    <div class="mb-3">
                        {{ form_label(countryForm.name) }}
                        {{ form_widget(countryForm.name) }}
                        {{ form_errors(countryForm.name) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(countryForm.logo) }}
                        {{ form_widget(countryForm.logo) }}
                        {{ form_errors(countryForm.logo) }}
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Créer le pays</button>
                        <a href="{{ path('app_home') }}" class="btn btn-secondary">Retour à l'accueil</a>
                    </div>
                {{ form_end(countryForm) }}
            </div>
        </div>
    </div>
{% endblock %}

