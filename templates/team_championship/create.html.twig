{% extends 'base.html.twig' %}

{% block title %}Associer une équipe à un championnat{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Associer une équipe à un championnat</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        <div class="card mt-4">
            <div class="card-body">
                {{ form_start(teamChampionShipForm) }}
                    <div class="mb-3">
                        {{ form_label(teamChampionShipForm.championship) }}
                        {{ form_widget(teamChampionShipForm.championship) }}
                        {{ form_errors(teamChampionShipForm.championship) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(teamChampionShipForm.team) }}
                        {{ form_widget(teamChampionShipForm.team) }}
                        {{ form_errors(teamChampionShipForm.team) }}
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Associer l'équipe</button>
                        <a href="{{ path('app_home') }}" class="btn btn-secondary">Retour à l'accueil</a>
                    </div>
                {{ form_end(teamChampionShipForm) }}
            </div>
        </div>
    </div>
{% endblock %}

