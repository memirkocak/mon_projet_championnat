{% extends 'base.html.twig' %}

{% block title %}Création de journée{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Création de journée</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        <div class="card mt-4">
            <div class="card-body">
                {{ form_start(dayForm) }}
                    <div class="mb-3">
                        {{ form_label(dayForm.championship) }}
                        {{ form_widget(dayForm.championship) }}
                        {{ form_errors(dayForm.championship) }}
                    </div>
                    <div class="mb-3">
                        {{ form_label(dayForm.number) }}
                        {{ form_widget(dayForm.number) }}
                        {{ form_errors(dayForm.number) }}
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Créer la journée</button>
                        <a href="{{ path('app_home') }}" class="btn btn-secondary">Retour à l'accueil</a>
                    </div>
                {{ form_end(dayForm) }}
            </div>
        </div>
    </div>
{% endblock %}

