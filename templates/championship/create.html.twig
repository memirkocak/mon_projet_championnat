{% extends 'base.html.twig' %}

{% block title %}Création de championnat{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Création de championnat</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        <div class="card mt-4">
            <div class="card-body">
                {{ form_start(championshipForm) }}
                    <div class="mb-3">
                        {{ form_label(championshipForm.name) }}
                        {{ form_widget(championshipForm.name) }}
                        {{ form_errors(championshipForm.name) }}
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(championshipForm.startDate) }}
                            {{ form_widget(championshipForm.startDate) }}
                            {{ form_errors(championshipForm.startDate) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(championshipForm.endDate) }}
                            {{ form_widget(championshipForm.endDate) }}
                            {{ form_errors(championshipForm.endDate) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            {{ form_label(championshipForm.wonPoint) }}
                            {{ form_widget(championshipForm.wonPoint) }}
                            {{ form_errors(championshipForm.wonPoint) }}
                        </div>
                        <div class="col-md-4 mb-3">
                            {{ form_label(championshipForm.lostPoint) }}
                            {{ form_widget(championshipForm.lostPoint) }}
                            {{ form_errors(championshipForm.lostPoint) }}
                        </div>
                        <div class="col-md-4 mb-3">
                            {{ form_label(championshipForm.drawPoint) }}
                            {{ form_widget(championshipForm.drawPoint) }}
                            {{ form_errors(championshipForm.drawPoint) }}
                        </div>
                    </div>
                    <div class="mb-3">
                        {{ form_label(championshipForm.typeRanking) }}
                        {{ form_widget(championshipForm.typeRanking) }}
                        {{ form_errors(championshipForm.typeRanking) }}
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Créer le championnat</button>
                        <a href="{{ path('app_home') }}" class="btn btn-secondary">Retour à l'accueil</a>
                    </div>
                {{ form_end(championshipForm) }}
            </div>
        </div>
    </div>
{% endblock %}

