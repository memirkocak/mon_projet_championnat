{% extends 'base.html.twig' %}

{% block title %}{{ championship.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .day-card:hover .card-title {
            color: #0d6efd;
        }
        .days-carousel {
            position: relative;
            overflow: hidden;
            padding: 0 50px;
        }
        .days-carousel-container {
            display: flex;
            transition: transform 0.3s ease;
            will-change: transform;
        }
        .day-item {
            flex: 0 0 100%;
            min-width: 0;
            width: 100%;
            box-sizing: border-box;
        }
        .carousel-btn {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            z-index: 10;
            color: #0d6efd;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            font-size: 1.2rem;
            font-weight: bold;
        }
        .carousel-btn.prev {
            left: 10px;
        }
        .carousel-btn.next {
            right: 10px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>{{ championship.name }}</h1>
            <div>
                <a href="{{ path('app_championship_edit', {id: championship.id}) }}" class="btn btn-warning">Modifier le championnat</a>
                <form method="post" action="{{ path('app_championship_delete', {id: championship.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce championnat ? Toutes les journées et matchs associés seront également supprimés.');" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Supprimer le championnat</button>
                </form>
                <a href="{{ path('app_championships_list') }}" class="btn btn-secondary">Retour à la liste</a>
            </div>
        </div>

        <div class="row">
            <div class="col-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <h3>Informations générales</h3>
                    </div>
                    <div class="card-body">
                        <p><strong>Date de début :</strong> {{ championship.startDate|date('d/m/Y') }}</p>
                        <p><strong>Date de fin :</strong> {{ championship.endDate|date('d/m/Y') }}</p>
                        <p><strong>Points :</strong> Victoire: {{ championship.wonPoint }} | Nul: {{ championship.drawPoint }} | Défaite: {{ championship.lostPoint }}</p>
                        <p><strong>Type de classement :</strong> {{ championship.typeRanking }}</p>
                    </div>
                </div>
            </div>

            <div class="col-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <h3>Équipes participantes</h3>
                    </div>
                    <div class="card-body">
                        {% if teams|length > 0 %}
                            <ul class="list-group">
                                {% for team in teams %}
                                    <li class="list-group-item">
                                        <strong>{{ team.name }}</strong>
                                        <span class="text-muted">({{ team.country.name }})</span>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <p class="text-muted">Aucune équipe n'a encore joué dans ce championnat.</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <!-- Classement -->
        <div class="card mb-4">
            <div class="card-header">
                <h3>Classement {{ championship.name }}</h3>
            </div>
            <div class="card-body">
                {% if ranking|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Équipe</th>
                                    <th>Points</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in ranking %}
                                    <tr>
                                        <td>{{ loop.index }}</td>
                                        <td><strong>{{ item.team.name }}</strong></td>
                                        <td><strong>{{ item.points }}</strong></td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <p class="text-muted">Aucune équipe dans le classement.</p>
                {% endif %}
            </div>
        </div>

        <!-- Journées -->
        <div class="card mb-4">
            <div class="card-header">
                <h3>Journées</h3>
            </div>
            <div class="card-body">
                {% if championship.days|length > 0 %}
                    <div class="days-carousel" id="daysCarousel">
                        <button class="carousel-btn prev" id="prevBtn" aria-label="Journée précédente">‹</button>
                        <button class="carousel-btn next" id="nextBtn" aria-label="Journée suivante">›</button>
                        <div class="days-carousel-container" id="daysContainer">
                            {% for day in championship.days %}
                                <div class="day-item">
                                    {% if day.id %}
                                    <a href="{{ path('app_day_show', {id: day.id}) }}" class="text-decoration-none">
                                    {% else %}
                                    <div class="text-decoration-none">
                                    {% endif %}
                                        <div class="card h-100 day-card" style="cursor: pointer; transition: transform 0.2s, box-shadow 0.2s;">
                                            <div class="card-body">
                                                <h5 class="card-title">Journée {{ day.number }}</h5>
                                                <p class="card-text">
                                                    <small class="text-muted">{{ day.games|length }} match(s)</small>
                                                </p>
                                            </div>
                                        </div>
                                    {% if day.id %}
                                    </a>
                                    {% else %}
                                    </div>
                                    {% endif %}
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                {% else %}
                    <p class="text-muted">Aucune journée créée pour ce championnat.</p>
                {% endif %}
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h3>Matchs</h3>
            </div>
            <div class="card-body">
                {% set allGames = [] %}
                {% for day in championship.days %}
                    {% for game in day.games %}
                        {% set allGames = allGames|merge([game]) %}
                    {% endfor %}
                {% endfor %}

                {% if allGames|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Journée</th>
                                    <th>Équipe 1</th>
                                    <th>Score</th>
                                    <th>Équipe 2</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for game in allGames %}
                                    <tr>
                                        <td>Journée {{ game.day.number }}</td>
                                        <td>
                                            <strong>{{ game.team1.name }}</strong>
                                            <small class="text-muted">({{ game.team1.country.name }})</small>
                                        </td>
                                        <td><strong>{{ game.team1Point }} - {{ game.team2Point }}</strong></td>
                                        <td>
                                            <strong>{{ game.team2.name }}</strong>
                                            <small class="text-muted">({{ game.team2.country.name }})</small>
                                        </td>
                                        <td>
                                            <a href="{{ path('app_game_edit', {id: game.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                                            <form method="post" action="{{ path('app_game_delete', {id: game.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce match ?');" style="display: inline;">
                                                <button type="submit" class="btn btn-sm btn-danger">Supprimer</button>
                                            </form>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <p class="text-muted">Aucun match enregistré pour ce championnat.</p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function initCarousel() {
            const carousel = document.getElementById('daysCarousel');
            if (!carousel) return;

            const container = document.getElementById('daysContainer');
            const prevBtn = document.getElementById('prevBtn');
            const nextBtn = document.getElementById('nextBtn');
            
            if (!container || !prevBtn || !nextBtn) return;

            // Supprimer les anciens event listeners s'ils existent
            const newPrevBtn = prevBtn.cloneNode(true);
            const newNextBtn = nextBtn.cloneNode(true);
            prevBtn.parentNode.replaceChild(newPrevBtn, prevBtn);
            nextBtn.parentNode.replaceChild(newNextBtn, nextBtn);

            let currentIndex = 0;
            const items = container.querySelectorAll('.day-item');
            const totalItems = items.length;
            
            if (totalItems === 0) return;

            function updateCarousel() {
                const maxIndex = totalItems - 1;
                
                if (currentIndex > maxIndex) {
                    currentIndex = maxIndex;
                }
                if (currentIndex < 0) {
                    currentIndex = 0;
                }

                const carouselWidth = carousel.offsetWidth;
                const padding = 100;
                const visibleWidth = carouselWidth - padding;

                items.forEach(item => {
                    item.style.width = visibleWidth + 'px';
                });

                const translateX = -currentIndex * visibleWidth;
                container.style.transform = `translateX(${translateX}px)`;

                newPrevBtn.disabled = currentIndex === 0;
                newNextBtn.disabled = currentIndex >= maxIndex || totalItems <= 1;
            }

            newPrevBtn.addEventListener('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                if (currentIndex > 0) {
                    currentIndex--;
                    updateCarousel();
                }
            });

            newNextBtn.addEventListener('click', function(e) {
                e.preventDefault();
                e.stopPropagation();
                const maxIndex = totalItems - 1;
                if (currentIndex < maxIndex) {
                    currentIndex++;
                    updateCarousel();
                }
            });

            // Initialisation avec plusieurs tentatives
            function tryInit() {
                if (carousel.offsetWidth > 0) {
                    updateCarousel();
                } else {
                    setTimeout(tryInit, 50);
                }
            }
            
            tryInit();
            
            let resizeTimeout;
            window.addEventListener('resize', function() {
                clearTimeout(resizeTimeout);
                resizeTimeout = setTimeout(updateCarousel, 100);
            });
        }

        // chargement de la page
        if (document.readyState === 'loading') {
            document.addEventListener('DOMContentLoaded', initCarousel);
        } else {
            initCarousel();
        }

        document.addEventListener('turbo:load', initCarousel);
        document.addEventListener('turbo:render', initCarousel);
    </script>
{% endblock %}

