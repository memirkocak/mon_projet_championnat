{% extends 'base.html.twig' %}

{% block title %}{{ championship.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .day-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.2);
        }
        .day-card {
            color: inherit;
        }
        .day-card:hover .card-title {
            color: #0d6efd;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>{{ championship.name }}</h1>
            <div>
                <a href="{{ path('app_championship_edit', {id: championship.id}) }}" class="btn btn-warning">Modifier le championnat</a>
                <form method="post" action="{{ path('app_championship_delete', {id: championship.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce championnat ? Toutes les journées et matchs associés seront également supprimés.');" style="display: inline;">
                    <button type="submit" class="btn btn-danger">Supprimer le championnat</button>
                </form>
                <a href="{{ path('app_championships_list') }}" class="btn btn-secondary">Retour à la liste</a>
            </div>
        </div>

        <div class="row">
            <!-- Informations générales -->
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <h3>Informations générales</h3>
                    </div>
                    <div class="card-body">
                        <p><strong>Date de début :</strong> {{ championship.startDate|date('d/m/Y') }}</p>
                        <p><strong>Date de fin :</strong> {{ championship.endDate|date('d/m/Y') }}</p>
                        <p><strong>Points :</strong> Victoire: {{ championship.wonPoint }} | Nul: {{ championship.drawPoint }} | Défaite: {{ championship.lostPoint }}</p>
                        <p><strong>Type de classement :</strong> {{ championship.typeRanking }}</p>
                    </div>
                </div>
            </div>

            <!-- Équipes participantes -->
            <div class="col-md-6">
                <div class="card mb-4">
                    <div class="card-header">
                        <h3>Équipes participantes</h3>
                    </div>
                    <div class="card-body">
                        {% if teams|length > 0 %}
                            <ul class="list-group">
                                {% for team in teams %}
                                    <li class="list-group-item">
                                        <strong>{{ team.name }}</strong>
                                        <span class="text-muted">({{ team.country.name }})</span>
                                    </li>
                                {% endfor %}
                            </ul>
                        {% else %}
                            <p class="text-muted">Aucune équipe n'a encore joué dans ce championnat.</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>

        <!-- Journées -->
        <div class="card mb-4">
            <div class="card-header">
                <h3>Journées</h3>
            </div>
            <div class="card-body">
                {% if championship.days|length > 0 %}
                    <div class="row">
                        {% for day in championship.days %}
                            <div class="col-md-3 mb-3">
                                <a href="{{ path('app_day_show', {id: day.id}) }}" class="text-decoration-none">
                                    <div class="card h-100 day-card" style="cursor: pointer; transition: transform 0.2s, box-shadow 0.2s;">
                                        <div class="card-body">
                                            <h5 class="card-title">Journée {{ day.number }}</h5>
                                            <p class="card-text">
                                                <small class="text-muted">{{ day.games|length }} match(s)</small>
                                            </p>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <p class="text-muted">Aucune journée créée pour ce championnat.</p>
                {% endif %}
            </div>
        </div>

        <!-- Matchs -->
        <div class="card">
            <div class="card-header">
                <h3>Matchs</h3>
            </div>
            <div class="card-body">
                {% set allGames = [] %}
                {% for day in championship.days %}
                    {% for game in day.games %}
                        {% set allGames = allGames|merge([game]) %}
                    {% endfor %}
                {% endfor %}

                {% if allGames|length > 0 %}
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Journée</th>
                                    <th>Équipe 1</th>
                                    <th>Score</th>
                                    <th>Équipe 2</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for game in allGames %}
                                    <tr>
                                        <td>Journée {{ game.day.number }}</td>
                                        <td>
                                            <strong>{{ game.team1.name }}</strong>
                                            <small class="text-muted">({{ game.team1.country.name }})</small>
                                        </td>
                                        <td><strong>{{ game.team1Point }} - {{ game.team2Point }}</strong></td>
                                        <td>
                                            <strong>{{ game.team2.name }}</strong>
                                            <small class="text-muted">({{ game.team2.country.name }})</small>
                                        </td>
                                        <td>
                                            <a href="{{ path('app_game_edit', {id: game.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                                            <form method="post" action="{{ path('app_game_delete', {id: game.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce match ?');" style="display: inline;">
                                                <button type="submit" class="btn btn-sm btn-danger">Supprimer</button>
                                            </form>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                {% else %}
                    <p class="text-muted">Aucun match enregistré pour ce championnat.</p>
                {% endif %}
            </div>
        </div>
    </div>
{% endblock %}

