{% extends 'base.html.twig' %}

{% block title %}Modifier le championnat{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h2>Modifier le championnat : {{ championship.name }}</h2>
                    </div>
                    <div class="card-body">
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">{{ message }}</div>
                        {% endfor %}

                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger">{{ message }}</div>
                        {% endfor %}

                        {{ form_start(championshipForm) }}
                            {{ form_row(championshipForm.name) }}
                            {{ form_row(championshipForm.startDate) }}
                            {{ form_row(championshipForm.endDate) }}
                            {{ form_row(championshipForm.wonPoint) }}
                            {{ form_row(championshipForm.lostPoint) }}
                            {{ form_row(championshipForm.drawPoint) }}
                            {{ form_row(championshipForm.typeRanking) }}
                            
                            <div class="mt-3">
                                <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                                <a href="{{ path('app_championships_list') }}" class="btn btn-secondary">Annuler</a>
                            </div>
                        {{ form_end(championshipForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

