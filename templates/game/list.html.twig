{% extends 'base.html.twig' %}

{% block title %}Liste des matchs{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1>Liste des matchs</h1>
            <div>
                <a href="{{ path('app_game_create') }}" class="btn btn-primary">Créer un match</a>
                <a href="{{ path('app_home') }}" class="btn btn-secondary">Retour à l'accueil</a>
            </div>
        </div>

        {% if games|length > 0 %}
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Journée</th>
                            <th>Championnat</th>
                            <th>Équipe 1</th>
                            <th>Score</th>
                            <th>Équipe 2</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for game in games %}
                            <tr>
                                <td>{{ game.id }}</td>
                                <td>Journée {{ game.day.number }}</td>
                                <td>{{ game.day.championship.name }}</td>
                                <td><strong>{{ game.team1.name }}</strong></td>
                                <td><strong>{{ game.team1Point }} - {{ game.team2Point }}</strong></td>
                                <td><strong>{{ game.team2.name }}</strong></td>
                                <td>
                                    <a href="{{ path('app_game_edit', {id: game.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                                    <form method="post" action="{{ path('app_game_delete', {id: game.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce match ?');" style="display: inline;">
                                        <button type="submit" class="btn btn-sm btn-danger">Supprimer</button>
                                    </form>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        {% else %}
            <div class="alert alert-info">
                <p class="mb-0">Aucun match n'a encore été créé.</p>
            </div>
        {% endif %}
    </div>
{% endblock %}

