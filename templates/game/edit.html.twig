{% extends 'base.html.twig' %}

{% block title %}Modifier le match{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h2>Modifier le match</h2>
                        <p class="mb-0 text-muted">
                            Journ√©e : {{ game.day.number }} - {{ game.day.championship.name }}
                        </p>
                    </div>
                    <div class="card-body">
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success">{{ message }}</div>
                        {% endfor %}

                        {% for message in app.flashes('error') %}
                            <div class="alert alert-danger">{{ message }}</div>
                        {% endfor %}

                        {{ form_start(gameForm, {'attr': {'method': 'POST'}}) }}
                            {{ form_row(gameForm.day) }}
                            {{ form_row(gameForm.team1) }}
                            {{ form_row(gameForm.team1Point) }}
                            {{ form_row(gameForm.team2) }}
                            {{ form_row(gameForm.team2Point) }}
                            
                            <div class="mt-3">
                                <button type="submit" class="btn btn-primary">Enregistrer les modifications</button>
                                <a href="{{ path('app_games_list') }}" class="btn btn-secondary">Annuler</a>
                            </div>
                        {{ form_end(gameForm) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

