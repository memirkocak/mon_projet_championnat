{% extends 'base.html.twig' %}

{% block title %}Création de résultat{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1>Création de résultat</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}

        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        <div class="card mt-4">
            <div class="card-body">
                {{ form_start(gameForm) }}
                    <div class="mb-3">
                        {{ form_label(gameForm.day) }}
                        {{ form_widget(gameForm.day) }}
                        {{ form_errors(gameForm.day) }}
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(gameForm.team1) }}
                            {{ form_widget(gameForm.team1) }}
                            {{ form_errors(gameForm.team1) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(gameForm.team1Point) }}
                            {{ form_widget(gameForm.team1Point) }}
                            {{ form_errors(gameForm.team1Point) }}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(gameForm.team2) }}
                            {{ form_widget(gameForm.team2) }}
                            {{ form_errors(gameForm.team2) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(gameForm.team2Point) }}
                            {{ form_widget(gameForm.team2Point) }}
                            {{ form_errors(gameForm.team2Point) }}
                        </div>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Créer le résultat</button>
                        <a href="{{ path('app_home') }}" class="btn btn-secondary">Retour à l'accueil</a>
                    </div>
                {{ form_end(gameForm) }}
            </div>
        </div>
    </div>
{% endblock %}

